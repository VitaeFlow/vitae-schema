{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vitaeflow.github.io/vitaeflow-schemas/schemas/v0.1.0/vitaeflow.schema.json",
  "title": "Vitaeflow Schema",
  "description": "Official JSON Schema for Vitaeflow structured resume standard (v0.1.0).",
  "type": "object",
  "required": ["$schema", "specVersion", "meta", "profile"],
  "additionalProperties": true,
  "properties": {
    "$schema": { "type": "string", "format": "uri" },
    "specVersion": { "type": "string", "const": "0.2.0" },
    "meta": {
      "type": "object",
      "properties": {
        "canonical": { "type": "string", "format": "uri" },
        "lastModified": { "type": "string", "format": "date-time" },
        "language": { "type": "string", "pattern": "^[a-z]{2}(-[A-Z]{2})?$" },
        "country": { "type": "string", "pattern": "^[A-Z]{2}$" }
      },
      "required": [],
      "additionalProperties": false
    },

    "profile": {
      "type": "object",
      "required": ["basics", "experience"],
      "additionalProperties": false,
      "properties": {
        "basics": {
          "type": "object",
          "required": ["lastName", "firstName", "email"],
          "properties": {
            "lastName": { "type": "string" },
            "firstName": { "type": "string" },
            "label": { "type": "string" },
            "pronouns": { "type": "string" },
            "title": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" },
            "url": { "type": "string", "format": "uri" },
            "summary": { "type": "string" },
            "location": { "$ref": "#/$defs/location" },
            "profiles": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["network", "url"],
                "properties": {
                  "network": { "type": "string" },
                  "username": { "type": "string" },
                  "url": { "type": "string", "format": "uri" }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },

        "experience": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["position", "company", "startDate"],
            "properties": {
              "position": { "type": "string" },
              "company": { "type": "string" },
              "contractType": { "type": "string" },
              "startDate": { "$ref": "#/$defs/isoDate" },
              "endDate": { "$ref": "#/$defs/isoDate" },
              "current": { "type": "boolean", "default": false },
              "location": { "$ref": "#/$defs/location" },
              "summary": { "type": "string" },
              "highlights": { "type": "array", "items": { "type": "string" } },
              "labels": { "type": "array", "items": { "type": "string" } },
              "projects": {
                "type": "array",
                "items": { "$ref": "#/$defs/projectItem" }
              }
            },
            "additionalProperties": false
          }
        },

        "education": {
          "type": "array",
          "items": { "$ref": "#/$defs/educationItem" }
        },
        "skills": { "type": "array", "items": { "$ref": "#/$defs/skillItem" } },
        "languages": {
          "type": "array",
          "items": { "$ref": "#/$defs/languageItem" }
        },
        "awards": { "type": "array", "items": { "$ref": "#/$defs/awardItem" } },
        "certificates": {
          "type": "array",
          "items": { "$ref": "#/$defs/certificateItem" }
        },
        "publications": {
          "type": "array",
          "items": { "$ref": "#/$defs/publicationItem" }
        },
        "volunteer": {
          "type": "array",
          "items": { "$ref": "#/$defs/experienceItem" }
        }
      }
    }
  },

  "$defs": {
    "isoDate": {
      "type": "string",
      "pattern": "^\\d{4}(-(0[1-9]|1[0-2]))?(-(0[1-9]|[12][0-9]|3[01]))?$"
    },

    "location": {
      "type": "object",
      "properties": {
        "city": { "type": "string" },
        "region": { "type": "string" },
        "country": { "type": "string", "pattern": "^[A-Z]{2}$" }
      },
      "additionalProperties": false
    },

    "educationItem": {
      "type": "object",
      "properties": {
        "institution": { "type": "string" },
        "area": { "type": "string" },
        "studyType": { "type": "string" },
        "startDate": { "$ref": "#/$defs/isoDate" },
        "endDate": { "$ref": "#/$defs/isoDate" },
        "gpa": { "type": "number" },
        "courses": { "type": "array", "items": { "type": "string" } },
        "location": { "$ref": "#/$defs/location" },
        "summary": { "type": "string" },
        "highlights": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },

    "skillItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "level": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "languageItem": {
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "fluency": { "type": "string" }
      },
      "required": ["code"],
      "additionalProperties": false
    },
    "projectItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      },
      "additionalProperties": false
    },
    "awardItem": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "date": { "$ref": "#/$defs/isoDate" },
        "awarder": { "type": "string" },
        "summary": { "type": "string" }
      },
      "additionalProperties": false
    },
    "certificateItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "issuer": { "type": "string" },
        "date": { "$ref": "#/$defs/isoDate" },
        "expiryDate": { "$ref": "#/$defs/isoDate" },
        "url": { "type": "string", "format": "uri" }
      },
      "additionalProperties": false
    },
    "publicationItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "publisher": { "type": "string" },
        "releaseDate": { "$ref": "#/$defs/isoDate" },
        "url": { "type": "string", "format": "uri" },
        "summary": { "type": "string" }
      },
      "additionalProperties": false
    },
    "experienceItem": {
      "type": "object",
      "required": ["position", "company", "startDate"],
      "properties": {
        "position": { "type": "string" },
        "company": { "type": "string" },
        "contractType": { "type": "string" },
        "startDate": { "$ref": "#/$defs/isoDate" },
        "endDate": { "$ref": "#/$defs/isoDate" },
        "current": { "type": "boolean", "default": false },
        "location": { "$ref": "#/$defs/location" },
        "summary": { "type": "string" },
        "highlights": {
          "type": "array",
          "items": { "type": "string" }
        },
        "labels": {
          "type": "array",
          "items": { "type": "string" }
        },
        "projects": {
          "type": "array",
          "items": { "$ref": "#/$defs/projectItem" }
        }
      },
      "additionalProperties": true
    }
  }
}